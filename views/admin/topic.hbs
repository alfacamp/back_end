<h2>Topics</h2>
<div style="background-color: yellow;width:300px" >
    <h3>Add Topic</h3>
    <form method="post" action="/admin/topic">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name"><br>
            <label>Theory</label>
            <input type="text" class="form-control" name="theory" placeholder="Theory">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
<ul>
    {{# each topic}}
        <li>
            <a href="/admin/topic/{{this._id}}">{{this.name}}</a>
            <a href="/admin/topic/{{this._id}}/del" style='float:right'>delete</a>
        </li>
    {{/each}}
</ul>
<style type="text/css">
    li{
        list-style-type: none;
        background-color: pink;
        width: 250px;
        padding: 5px;
        margin: 5px;
    }
</style>