<h2>Subjects</h2>
<h3>{{msg}}</h3>
<div style="background-color: yellow;width:300px" >
    <h3>Add Subject</h3>
    <form method="post" action="/admin/subject">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
<ul>
    {{# each subject}}
        <li>
            <a href="/admin/subject/{{this._id}}">{{this.name}}</a>
            <a href="/admin/subject/{{this._id}}/del" style='float:right'>delete</a>
        </li>
    {{/each}}
</ul>
<style type="text/css">
    li{
        list-style-type: none;
        background-color: pink;
        width: 250px;
        padding: 5px;
        margin: 5px;
    }
</style>